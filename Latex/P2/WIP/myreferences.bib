file = {:C$\backslash$:/Users/Dani{\"{e}}l/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Vetrivel et al. - 2016 - Towards Automated Satellite Image Segmentation and Classification for Assessing Disaster Damage Using Data-Spec.pdf:pdf},
journal = {GEOB IA 2016 - Solutions {\&} Synergies},
keywords = {building damage,cnn features,online learning,satellite imagery,streaming training samples},
title = {{Towards Automated Satellite Image Segmentation and Classification for Assessing Disaster Damage Using Data-Specific Features with Incremental Learning}},
year = {2016}
}
