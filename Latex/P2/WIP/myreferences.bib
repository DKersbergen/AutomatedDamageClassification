journal = {Science And Technology},
keywords = {Ingara,Synthetic aperture rada,interferometry,radar det,radar detection,radar surveillance,synthetic aperture rada},
title = {{Coherent change detection: theoretical description and experimental results}},
url = {http://oai.dtic.mil/oai/oai?verb=getRecord{\&}metadataPrefix=html{\&}identifier=ADA458288{\%}5Cnhttp://oai.dtic.mil/oai/oai?verb=getRecord{\&}metadataPrefix=html{\&}identifier=ADA458288{\%}5Cnhttp://oai.dtic.mil/oai/oai?verb=getRecord{\&}metadataPrefix=html{\&}identifier},
